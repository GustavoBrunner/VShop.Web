@model IEnumerable<ProductViewDTO>
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Register" class="btn btn-primary">
                    <span title="Create Product" class="fas fa-plus">
                        Create Product
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
@if (Model.Any())
{
    <div class="panel panel-default">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Stock)</th>
                    <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductViewDTO product in Model)
                {
                    <tr>
                        <th>@product.Name</th>
                        <td>@product.Price</td>
                        <td>@product.Stock</td>
                        <td>@product.CategoryName</td>
                        <td>@product.Description</td>
                        <td>
                            <a asp-action="Register" asp-controller="Product" asp-route-id="@product.Id" title="Edit Product"
                                class="btn btn-warning">
                                <span class="fas fa-edit"> </span>
                            </a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" title="Delete Product"
                                class="btn btn-danger">
                                <span class="fas fa-trash-alt"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>No product found to show!</h1>
}
