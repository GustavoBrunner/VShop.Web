@model CategoryViewDTO

<div class="container col-sm-8 col-lg-4">
    <div class="row">
        <div class="col-md-12">
            <div>
                <div class="pull-left">
                    <h1>Products from: @Model.Name</h1>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Products.Any())
    {
        <div class="panel panel-default">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Price</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ProductDTO product in Model.Products)
                    {
                        <tr>
                            <th>@product.Name</th>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.Stock</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h1>No category found to show!</h1>
    }
</div>